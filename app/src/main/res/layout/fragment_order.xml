<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/order_infoLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="eu.amdevelop.viamiaitalia.viamiaitalia.Fragments.OrderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/order_accommodaitonIV"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="accommodation image"
                android:scaleType="centerCrop"
                android:src="@android:drawable/screen_background_dark_transparent" />

            <TextView
                android:id="@+id/order_headerTV"
                style="@style/Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="24dp"
                android:text="Accommodation Name" />

            <TableLayout
                android:id="@+id/order_infoTL"
                style="@style/sidePadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/order_i_nameTV"
                        style="@style/Paragraph"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:padding="3dip"
                        android:text="Name:" />

                    <TextView
                        android:id="@+id/order_info_nameTV"
                        style="@style/Paragraph"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:padding="3dip"
                        android:text="Name Surname" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/order_i_mailTV"
                        style="@style/Paragraph"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:padding="3dip"
                        android:text="Email:" />

                    <TextView
                        android:id="@+id/order_info_mailTV"
                        style="@style/Paragraph"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:padding="3dip"
                        android:text="mail@mail.com" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/order_i_phoneTV"
                        style="@style/Paragraph"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:padding="3dip"
                        android:text="Phone:" />

                    <TextView
                        android:id="@+id/order_info_phoneTV"
                        style="@style/Paragraph"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:padding="3dip"
                        android:text="+123456" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/order_i_nopplTV"
                        style="@style/Paragraph"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:padding="3dip"
                        android:text="No. of persons:" />

                    <TextView
                        android:id="@+id/order_info_nopplTV"
                        style="@style/Paragraph"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:padding="3dip"
                        android:text="2" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/order_i_nochTV"
                        style="@style/Paragraph"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:padding="3dip"
                        android:text="No. of children:" />

                    <TextView
                        android:id="@+id/order_info_nochTV"
                        style="@style/Paragraph"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:padding="3dip"
                        android:text="1" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/order_checkinoutLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    >

                    <TextView
                        android:id="@+id/order_chin_dateTV"
                        style="@style/Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="28/11/2017" />

                    <TextView
                        android:id="@+id/order_chin_timeTV"
                        style="@style/Subheader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="14:00" />

                    <TextView
                        android:id="@+id/order_chinTV"
                        style="@style/Subheader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Check In" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:id="@+id/order_chout_dateTV"
                        style="@style/Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="4/12/2017" />

                    <TextView
                        android:id="@+id/order_chout_timeTV"
                        style="@style/Subheader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="10:00" />

                    <TextView
                        android:id="@+id/order_choutTV"
                        style="@style/Subheader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Check Out" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/order_accomm_infoTV"
                style="@style/Header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:text="Accommodation Information"
                />

            <TableLayout
                android:id="@+id/order_accomm_infoTL"
                style="@style/sidePadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/order_ai_accommTV"
                        style="@style/Paragraph"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:padding="3dip"
                        android:text="Accommodation:" />

                    <TextView
                        android:id="@+id/order_ainfo_accommTV"
                        style="@style/Paragraph"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:padding="3dip"
                        android:text="Villa Amore" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/order_ai_apartTV"
                        style="@style/Paragraph"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:padding="3dip"
                        android:text="Apartments:" />

                    <TextView
                        android:id="@+id/order_ainfo_apartTV"
                        style="@style/Paragraph"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:padding="3dip"
                        android:text="White Apartment,\nGreen Apartment" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/order_accommBtn"
                style="@style/DarkButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="12dp"
                android:text="See more about Accommodation" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
