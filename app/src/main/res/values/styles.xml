<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:padding">@dimen/fab_padding</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Header">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Subheader">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:color">@android:color/darker_gray</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Paragraph">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="sidePadding">
        <item name="android:paddingLeft">@dimen/min_padding</item>
        <item name="android:paddingRight">@dimen/min_padding</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ViaMiaTheme" parent="AppTheme" />

</resources>
